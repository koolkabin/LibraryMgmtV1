@model List<Books>
@{
    int sn = 1;
}
<div class="d-flex justify-content-between">
    <h2>Book List</h2>
    <a asp-action="Create" class="btn btn-success">Add Book</a>
</div>

<table class="table mt-4">
    <thead class="table-dark">
        <tr>
            <th>SN</th>
            <th>Book Name</th>
            <th>ISBN</th>
            <th>Level</th>
            <th>Publication</th>
            <th>Book Author</th>
            <th>Book Category</th>
            <th>Book Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(sn++)</td>
                <td>@(item.Name)</td>
                <td>@(item.ISBN)</td>
                <td>@(item.Level)</td>
                <td>@(item.Publication)</td>
                <td>@(item.BookAuthor.Name)</td>
                <td>@(item.BookCategory.Name)</td>
                <td>@(item.Count)</td>
                <td>
                    <div class="d-flex">
                        <a asp-action="Delete" asp-route-id="@(item.Id)" class="btn btn-danger">
                            Delete
                        </a>

                        @* <form asp-action="Delete" mathod="POST">
                            <input hidden value="@(item.Id)" name="id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form> *@

                        <form asp-action="Edit" method="GET">
                            <input hidden value="@(item.Id)" name="id">
                            <button type="submit" class="btn btn-warning">Update</button>
                        </form>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>