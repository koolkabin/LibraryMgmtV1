@model Publication
@{
}
<div class="d-flex justify-content-between">
    <h2>Update Publication</h2>
    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
</div>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-6">

            <form asp-action="Edit" method="POST">
                <input hidden name="id" value="@(Model.Id)">
                <div class="row">
                    <div class="col-2">
                        <label>Name</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Name)" name="Name">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                    </div>
                    <div class="col-10">
                        <button type="submit" class="btn btn-success">Submit</button>

                    </div>
                </div>
            </form>

        </div>
    </div>

</div>

