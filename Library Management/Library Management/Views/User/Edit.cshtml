@model User
@{
}
<div class="d-flex justify-content-between">
    <h2>Add User</h2>
    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
</div>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <form asp-action="Edit" method="POST">
                <input hidden name="id" value="@(Model.Id)">
                <div class="row">
                    <div class="col-2">
                        <label>Name</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Name)" name="Name">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Email</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Email)" name="Email">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>Phone</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Phone)" name="Phone">
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-2">
                        <label>Password</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Password)" name="Password">
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-2">
                        <label>Faculty</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.Faculty)" name="Faculty">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <label>UserType</label>
                    </div>
                    <div class="col-10">
                        <input class="form-control" value="@(Model.UserType)" name="UserType">
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-2">
                    </div>
                    <div class="col-10">
                        <button type="submit" class="btn btn-success">Submit</button>

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

