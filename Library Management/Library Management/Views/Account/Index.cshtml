@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<style>
    .background {
        background-image: url('/Images/library.jpeg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }
</style>

<div class="container-fluid d-flex align-items-center justify-content-center background" style="width: 100vw; height: 100vh;">
    <div class="row">
        <div class="col-md-1" ></div>

        <div class="col">
            <div class="col-sm-10 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        @if (TempData.ContainsKey("ErrorMessage"))
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                        <div class="row mt-3">
                            <div class="col text-center">
                                <img src="~/Images/Logo.png" width="30%" height="auto" alt="Logo" class="mx-auto">
                                <h1>LibraSYS</h1>
                            </div>
                        </div>
                        <form asp-action="Login" method="POST">
                            <div class="row mt-3">
                                <label>Email:</label>
                                <input class="form-control" type="email" name="email" required>
                            </div>
                            <div class="row mt-3">
                                <label>Password:</label>
                                <input class="form-control" type="password" name="password" required>
                            </div>

                            <div class="row mt-3">
                                <button type="submit" class="btn btn-success">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-1"></div>
    </div>
</div>
